  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass', '~> 2.0.1'
end

gem 'debugger', group: [:development, :test]
gem 'jquery-rails'

gem 'thin'
gem 'quiet_assets'