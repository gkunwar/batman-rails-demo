source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'batman-rails', git: 'git://github.com/Shopify/batman-rails.git'
gem 'haml-rails'
gem 'haml_assets'
gem 'ejs'

gem 'sqlite3'

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
